<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:weightSum="2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.WalkthroughActivity">
    <RelativeLayout
        android:background="@color/pinkcolor"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0sp">
        <ImageView
            android:id="@+id/midimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_happidicon">

        </ImageView>

        <ImageView
            android:id="@+id/nameimage"
            android:src="@drawable/name"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/midimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ImageView>

    </RelativeLayout>
    <RelativeLayout
        android:background="@color/whitecolor"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0sp">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_16sdp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Best Markitplac"
            android:textColor="@color/blackcolor"
            android:textSize="@dimen/_16sdp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:fontFamily="@font/inter_medium"
            android:text="O On-Time Departures. Pay just for your seat. No Refusal from our end. Spacious and Comfortable Seating. Female passengers safety standards. Onboard Refreshments. Cab Tracking through Maps"
            android:textColor="@color/blackcolor"
            android:textSize="@dimen/_12sdp">

        </TextView>


        <androidx.cardview.widget.CardView
            android:id="@+id/bottomcard"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            app:cardBackgroundColor="@color/appcolor"
            app:cardCornerRadius="@dimen/_5sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="36sp"
                android:layout_marginRight="36sp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_18sdp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Get Started"
                android:textAllCaps="true"
                android:textColor="@color/whitecolor"
                android:textSize="14sp">

            </TextView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>



</LinearLayout>