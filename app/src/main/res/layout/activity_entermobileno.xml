<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/whitecolor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EntermobilenoActivity">
    <RelativeLayout
        android:id="@+id/headerrylt"
        android:background="@color/pinkcolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp">

        <ImageView
            android:layout_centerVertical="true"

            android:id="@+id/back"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:src="@drawable/ic_back">

        </ImageView>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerrylt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pinkcolor">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Enter your mobile number"
                    android:textColor="@color/blackcolor"
                    android:textSize="@dimen/_24sdp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt1"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="Hello, Welcome Back to Our Account"
                    android:textColor="@color/blackcolor"
                    android:textSize="@dimen/_14sdp">

                </TextView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_weight="0.6"
                    app:cardBackgroundColor="@color/pinkcolor"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/flagimage"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/flag">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_toRightOf="@+id/flagimage"
                            android:fontFamily="@font/inter_medium"
                            android:text="+91"
                            android:textColor="@color/blackcolor"
                            android:textSize="@dimen/_14sdp">

                        </TextView>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"

                    android:layout_height="@dimen/_52sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_weight="1.4"
                    app:cardBackgroundColor="@color/pinkcolor"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <EditText
                        android:layout_marginRight="@dimen/_8sdp"
                        android:id="@+id/edittxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:background="#00000000"
                        android:fontFamily="@font/montserrat"
                        android:hint="00000 00000"
                        android:imeOptions="actionSearch"
                        android:inputType="number"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/blackcolor"
                        android:textColorHint="@color/blackcolor"
                        android:textSize="@dimen/_16sdp"></EditText>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/bottomcard"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                app:cardBackgroundColor="@color/appcolor"
                app:cardCornerRadius="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="36sp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginRight="36sp"
                    android:layout_marginBottom="@dimen/_18sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Request OTP"

                    android:textColor="@color/whitecolor"
                    android:textSize="14sp">

                </TextView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <View
                    android:layout_width="0sp"
                    android:layout_height="1sp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:background="#DDD">

                </View>

                <RelativeLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat"
                        android:text="Login With"
                        android:textColor="@color/blackcolor"
                        android:textSize="@dimen/_14sdp">

                    </TextView>
                </RelativeLayout>

                <View
                    android:layout_width="0sp"

                    android:layout_height="1sp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_weight="1"
                    android:background="#DDD">

                </View>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/pinkcolor"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginRight="@dimen/_8sdp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/googleimage"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/googlelogo">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/googleimage"
                            android:fontFamily="@font/inter_medium"
                            android:text="Google"
                            android:textColor="@color/blackcolor"
                            android:textSize="@dimen/_14sdp">

                        </TextView>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0sp"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/pinkcolor"
                    app:cardCornerRadius="@dimen/_5sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/facebookimage"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@drawable/facebooklogo">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/facebookimage"
                            android:fontFamily="@font/inter_medium"
                            android:text="Facebook"
                            android:textColor="@color/blackcolor"
                            android:textSize="@dimen/_14sdp">

                        </TextView>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/_48sdp"
                android:layout_marginBottom="@dimen/_16sdp">


                <TextView
                    android:id="@+id/btxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/montserrat"
                    android:text="By creating passcode you agree with our"
                    android:textColor="@color/blackcolor"
                    android:textSize="@dimen/_12sdp">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btxt1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_4sdp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Terms and Conditions"
                        android:textColor="@color/orangecolor"
                        android:textSize="@dimen/_12sdp">

                    </TextView>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text=" And "
                        android:textColor="@color/blackcolor"
                        android:textSize="@dimen/_12sdp">

                    </TextView>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Privacy Policy"
                        android:textColor="@color/orangecolor"
                        android:textSize="@dimen/_12sdp">

                    </TextView>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</RelativeLayout>